# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3blocks
    #font -misc-anonymous pro-medium-r-normal--0-0-0-0-n-0-iso10646-1
    position $bar-position
    height $bar-height
    hidden_state show
    modifier $mod
    tray_output primary
    strip_workspace_numbers yes
    colors {
        background $bg-light
        statusline $fg-dark
        focused_workspace   $color0   $color0  $bg-dark
        active_workspace    $bg-light   $bg-light   $color0
        inactive_workspace  $bg-dark    $bg-dark    $fg-dark
        urgent_workspace    $bg-dark    $bg-dark    $red
    }
}

