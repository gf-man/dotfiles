set $color1  #ff7700

set $inner-gaps 16
set $outer-gaps 8

set $bar-height 24
set $bar-position top

client.unfocused        $bg-dark $bg-dark $fg-dark
client.focused_inactive $bg-light $bg-light $color0
client.focused          $color0 $color0 $bg-dark
