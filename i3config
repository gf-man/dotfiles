bindsym $mod+Shift+g mode "$mode_gaps"

Mode "$mode_gaps" {
        bindsym plus  gaps inner current plus 8
        bindsym minus gaps inner current minus 8
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 8
        bindsym Shift+minus gaps inner all minus 8
        bindsym Shift+0     gaps inner all set 0 

        bindsym $mod+plus  gaps outer current plus 8
        bindsym $mod+minus gaps outer current minus 8
        bindsym $mod+0     gaps outer current set 0

        bindsym $mod+Shift+plus  gaps outer all plus 8
        bindsym $mod+Shift+minus gaps outer all minus 8
        bindsym $mod+Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}


